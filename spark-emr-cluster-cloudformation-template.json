{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CloudFormation template for creating an EMR cluster.",
  "Parameters": {
    "ClusterName": {
      "Default": "my-spark-cluster",
      "Type": "String"
    },
    "CoreInstanceCount": {
      "Default": 1,
      "Type": "Number"
    },
    "CoreInstanceType": {
      "Default": "m1.small",
      "Type": "String"
    },
    "LogS3Bucket": {
      "Default": "datawithoutborders",
      "Type": "String"
    },
    "NotebookS3Bucket": {
      "Default": "datawithoutborders",
      "Type": "String"
    }
  },
  "Resources": {
    "EmrCluster": {
      "Properties": {
        "Applications": [
          {
            "Name": "Spark"
          },
          {
            "Name": "Zeppelin"
          },
		  {
		    "Name": "Hive"
		  },
		  {
		    "Name": "Hue"
		  }
        ],
        "Configurations": [
          {
            "Classification": "spark",
            "ConfigurationProperties": {
              "maximizeResourceAllocation": "true"
            }
          }
        ],
        "Instances": {
          "CoreInstanceGroup": {
            "InstanceCount": {
              "Ref": "CoreInstanceCount"
            },
            "InstanceType": {
              "Ref": "CoreInstanceType"
            },
			"Market": "ON_DEMAND",
            "Name": "Core"
          },
          "Ec2KeyName": "kranti",
          "MasterInstanceGroup": {
            "InstanceCount": 1,
            "InstanceType": "m1.small",
            "Market": "ON_DEMAND",
            "Name": "Master"
          }
        },
        "JobFlowRole": "EMR_EC2_DefaultRole",
        "LogUri": {
          "Fn::Join": [
            "/",
            [
              "s3:/",
              {
                "Ref": "LogS3Bucket"
              },
              "logs",
              {
                "Ref": "ClusterName"
              }
            ]
          ]
        },
        "Name": {
          "Ref": "ClusterName"
        },
        "ReleaseLabel": "emr-5.13.0",
        "ServiceRole": "EMR_DefaultRole",
        "Tags": [
          {
            "Key": "Service",
            "Value": "EMR"
          },
          {
            "Key": "Cluster",
            "Value": {
              "Ref": "ClusterName"
            }
          }
        ]
      },
      "Type": "AWS::EMR::Cluster"
    }
  }
}